---
apiVersion: v1
kind: Pod
metadata:
  name: upload-assets-<%= deployment_id %>
  labels:
    name: upload-assets-<%= deployment_id %>
    type: command-runner
    app: "devdegree17-interstellar"
    env: "production"
spec:
  activeDeadlineSeconds: 300
  restartPolicy: Never
  containers:
  - name: command-runner
    image: gcr.io/shopify-docker-images/apps/production/devdegree17-interstellar:<%= current_sha %>
    args:
    - "/exec"
    - bin/rake
    - cloudplatform:upload_assets
    env:
    - name: IS_CLOUD_ENV
      value: 'true'
    - name: RAILS_ENV
      value: "production"
    - name: PORT
      value: '8000'
    - name: DATABASE_URL
      valueFrom:
        secretKeyRef:
          name: database-url
          key: DATABASE_URL
    - name: NODE_NAME
      valueFrom:
        fieldRef:
          fieldPath: spec.nodeName
    - name: STATSD_ADDR
      value: $(NODE_NAME):8125
    - name: STATSD_IMPLEMENTATION
      value: datadog
    volumeMounts:
    - name: ejson-keys
      mountPath: "/key"
      readOnly: true
    resources:
      requests:
        cpu: 500m
      limits:
        cpu: 1000m
        memory: 2Gi
  volumes:
  - name: ejson-keys
    secret:
      secretName: ejson-keys
